


  <h2><%= @room.name %></h2>
  <h4>Square footage: <%= @room.sq_ft %></h4>

  <h4><%= @room.description %></h4>


<table>
  <thead>
    <tr>
      <th>Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room.photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.image_url(:thumb).to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<%= link_to 'New Photo', new_room_photo_path %>
</div>
  <%= link_to 'Back to Rooms', rooms_path %>
