


  <h2><%= @room.name %></h2>
  <h4>Square footage: <%= @room.sq_ft %></h4>

  <h4><%= @room.description %></h4>


<table>
  <div class="element">
  <thead>

  <tr>
      <th>Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

    <div class="row">
    <% @room.photos.each do |photo| %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <%= image_tag photo.image_url(:thumb).to_s %>
              </div>
          </div>
    <% end %>
  </div>

<br>

<div>
<%= link_to 'New Photo', new_room_photo_path %>
</div>
