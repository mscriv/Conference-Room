


<%= form_tag welcome_sign_in_path, class: 'form' do %>
    <h3>Sign in</h3>
    <%= text_field_tag 'name', nil, placeholder: 'Name' %>
    <%= text_field_tag 'email', nil, placeholder: 'Email address' %>
    <%= password_field_tag 'password', nil, placeholder: 'Password' %>
    <%=  submit_tag "Sign in", class: 'radius button tiny' %>
<% end %>