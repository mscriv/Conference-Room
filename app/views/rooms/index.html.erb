<h2>Conference Rooms</h2>
<%= form_tag search_rooms_path, classa: 'form' do %>
    <%= text_field_tag "search_query", nil, placeholder: 'Search text' %>
    <%= submit_tag "Search", class: 'radius button tiny' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Sq ft</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.location %></td>
        <td><%= room.sq_ft %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'View Photos', room_photos_path(room) %></td>
        <td><i class="fi-plus large""></i><%= link_to 'Show', room %></td>
        <td><i class="fi-pencil large"></i><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><i class="fi-trash large"></i><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><button class="tiny success button">Reserve</button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button class="small success button"><%= link_to 'Add New Room', new_room_path %></button>

