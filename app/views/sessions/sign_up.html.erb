<h3>Sign Up</h3>
<%= form_tag sessions_sign_up_path, class: 'form' do %>
    <%= text_field_tag 'name', nil, placeholder: 'Name' %>
    <%= text_field_tag 'email', nil, placeholder: 'Email' %>
    <%= password_field_tag 'password', nil, placeholder: 'password' %>
    <%= password_field_tag 'password_confirmation', nil, placeholder: 'Password_confirmation' %>
    <%=  submit_tag 'Sign up', class: 'radius button tiny' %>
<% end %>


