<%= simple_form_for @reservation do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :event_title, label: false, placeholder: 'Event Title' %>
      <%= f.input :date, label: false, placeholder: 'Date', autofocus: true %>
      <%= f.input :starts_at, label: false, placeholder: 'Start Time', autofocus: true %>
      <%= f.input :ends_at, label: false, placeholder: 'End Time', autofocus: true %>
      <%= f.input :user_id, label: false, placeholder: 'Name', autofocus: true %>
      <%= f.input :room_id, label: false, placeholder: 'Conference Room', autofocus: true %>
  <div>
      <%= f.button :submit, 'Submit', class: 'radius button [secondary success alert];'  %>
  <% end %>

  </div>