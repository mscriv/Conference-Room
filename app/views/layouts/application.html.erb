<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Conference Rooms" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Conference Rooms" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%# Modernizr is required for Zurb Foundation %>
    <%= javascript_include_tag 'vendor/modernizr' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>

      <%= render 'layouts/navigation' %>
      <div class="">
        <% if current_user %>
            Hello, <%= current_user.name %>.
            <%= link_to "Sign Out", signout_path("current"), method: "delete" %>
           <% else %>
            <%= link_to "Sign Up", signup_path %> or
            <%= link_to "Sign In", signin_path, method: "post" %>
         <% end %>
      </div>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>

    </main>
  </body>
</html>
